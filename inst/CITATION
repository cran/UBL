citHeader("To cite UBL in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{UBL}: Utility-based Learning",
         author = c(person("Paula", "Branco"),
                    person("Rita", "Ribeiro"),
                    person("Luis", "Torgo")),
         year = year,
         note = note,
         url = "https://github.com/paobranco/UBL")
